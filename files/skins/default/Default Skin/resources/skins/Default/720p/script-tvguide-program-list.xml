<?xml version="1.0" encoding="utf-8"?>
<window type="dialog">
    <allowoverlay>no</allowoverlay>
    <coordinates>
        <posx>100</posx>
        <posy>15</posy>
    </coordinates>
    <animation effect="fade" start="0" end="100" time="500">WindowOpen</animation>
    <animation effect="fade" start="100" end="0" time="500">WindowClose</animation>
    <controls>

        <control type="image">
            <posx>0</posx>
            <posy>0</posy>
            <width>1080</width>
            <height>580</height>
            <texture border="100">ontapp-program-list.png</texture>
        </control>

        <control type="label" id="4001">
            <description>Title Label</description>
            <posx>240</posx>
            <posy>10</posy>
            <width>600</width>
            <height>18</height>
            <textcolor>ffffffff</textcolor>
            <font>font12</font>
            <align>center</align>
            <aligny>center</aligny>
            <label>Find</label>
        </control>

        <control type="textbox" id="4002">
            <description>Program Description</description>
            <posx>640</posx>
            <posy>310</posy>
            <width>420</width>
            <height>200</height>
            <textcolor>ffffffff</textcolor>
            <font>font12</font>
            <wrapmultiline>true</wrapmultiline>
            <autoscroll time="3600" delay="6000" repeat="6000">true</autoscroll>
        </control>

        <control type="image" id="4007">
            <description>Program Image</description>
            <posx>640</posx>
            <posy>60</posy>
            <width>410</width>
            <height>230</height>
        </control>

        <control type="button" id="4005">
            <posx>420</posx>
            <posy>520</posy>
            <width>240</width>
            <height>35</height>
            <texturefocus>tvguide-program-grey-focus.png</texturefocus>
            <texturenofocus>tvguide-program-grey.png</texturenofocus>
            <align>center</align>
            <aligny>center</aligny>
            <font>font12</font>
            <textcolor>ffffffff</textcolor>
            <label>Close</label>
            <onup>4003</onup>
            <ondown>4003</ondown>
            <onleft>4006</onleft>
            <onright>4003</onright>
        </control>

        <control type="list" id="4003">
            <description>NOTE, text colours are overidden for programs in the past (grey) or on now (green)</description>
        <posx>4</posx>
        <posy>50</posy>
        <width>592</width>
        <height>420</height>
        <pagecontrol>4006</pagecontrol>
        <onleft>4005</onleft>
        <onright>4006</onright>            
            <itemwidth>592</itemwidth>
            <itemheight>30</itemheight>   
            <itemlayout width="300" height="30">
                <control type="image">
            <posx>4</posx>
            <posy>2</posy>
            <width>80</width>
            <height>26</height>
            <aspectratio>keep</aspectratio>
            <info>ListItem.Icon</info>
        </control>
                <control type="label">
            <posx>100</posx>
            <posy>0</posy>
            <width>310</width>
            <height>30</height>
            <font>font12</font>
                    <textcolor>FFFFFFFF</textcolor>
            <aligny>center</aligny>            
            <align>left</align>
            <info>ListItem.Label</info>
        </control>
                <control type="label">
            <posx>315</posx>
            <posy>0</posy>
            <width>270</width>
            <height>30</height>
                    <spacebetweenitems>50</spacebetweenitems>
            <font>font12</font>
                    <textcolor>FFFFFFFF</textcolor>
                <aligny>center</aligny>
                <align>right</align>
                <info>ListItem.Label2</info>
        </control>
            </itemlayout>
            <focusedlayout width="250" height="30">
                <control type="image">
            <posx>1</posx>
            <posy>0</posy>
            <width>591</width>
            <height>30</height>
            <visible>Control.HasFocus(4003)</visible>
            <texture>tvguide-program-grey-focus.png</texture>
        </control>
            <control type="image">
            <posx>4</posx>
            <posy>2</posy>
            <width>80</width>
            <height>26</height>
            <aspectratio>keep</aspectratio>
            <info>ListItem.Icon</info>
        </control>
                <control type="label">
            <posx>100</posx>
            <posy>0</posy>
            <width>310</width>
            <height>30</height>
            <font>font12</font>
            <textcolor>FFFFFFFF</textcolor>
            <aligny>center</aligny>
            <align>left</align>
            <info>ListItem.Label</info>
        </control>
                <control type="label">
            <posx>315</posx>
            <posy>0</posy>
            <width>270</width>
            <height>30</height>
                    <spacebetweenitems>50</spacebetweenitems>
            <font>font12</font>
                    <textcolor>FFFFFFFF</textcolor>
                <aligny>center</aligny>
                <align>right</align>
                <info>ListItem.Label2</info>
        </control>
            </focusedlayout>
    </control>   
            <control type="scrollbar" id="4006">
        <posx>592</posx>
        <posy>40</posy>
        <width>29</width>
        <height>450</height>
        <texturesliderbackground border="0,14,0,14">scrollbar.png</texturesliderbackground>
        <texturesliderbar border="0,14,0,14">scrollbar_bar.png</texturesliderbar>
        <texturesliderbarfocus border="0,14,0,14">scrollbar_bar_focus.png</texturesliderbarfocus>
        <onleft>4003</onleft>
        <onright>4005</onright>
        <ondown>4006</ondown>
        <onup>4006</onup>
        <showonepage>false</showonepage>
        <orientation>vertical</orientation>
    </control>     
     </controls>
</window>
