<?xml version="1.0" encoding="utf-8"?>
<window>    
    <allowoverlay>no</allowoverlay>
    <coordinates>
        <system>1</system>
        <posx>0</posx>
        <posy>0</posy>
    </coordinates>
   <defaultcontrol always="true">59</defaultcontrol>

    <controls>
        <control type="image">
            <description>Background Image</description>
            <posx>0</posx>
            <posy>0</posy>
            <width>1280</width>
            <height>720</height>
            <texture>lb_background.jpg</texture>
            <fadetime>500</fadetime>
        </control> 
		
		<control type="image">
			<posx>0</posx>
			<posy>0</posy>
			<width>1280</width>
			<height>720</height>                
			<fadetime>500</fadetime>					
			<texture>$INFO[ListItem.Property(Fanart)]</texture>
			<aspectratio>stretch</aspectratio>
		</control>
		
		<control type="image">
            <description>Floor Image</description>
            <posx>0</posx>
            <posy>100r</posy>
            <width>1280</width>
            <height>100</height>
            <texture>lb_floor.png</texture>
            <fadetime>250</fadetime>
        </control> 
		
		<control type="image">
			<posx>0</posx>
			<posy>-40</posy>
			<width>1280</width>
			<height>120</height>
			<texture flipy="true">lb_HomeNowPlayingBack.png</texture>
		</control>
		
		<control type="image">
			<description>Header image</description>
			<posx>20</posx>
			<posy>3</posy>
			<width>35</width>
			<height>35</height>
			<aspectratio>keep</aspectratio>
			<texture>lb_icon_video.png</texture>
		</control>
		
		<control type="label">
		    <posx>65</posx>
			<posy>5</posy>
			<textcolor>white</textcolor>
			<font>font13</font>
			<label>$INFO[Window(10000).Property(LB_TITLE)]</label>
		</control>
		
		<control type="label">
			<description>time label</description>
			<posx>20r</posx>
			<posy>5</posy>
			<width>200</width>
			<height>30</height>
			<align>right</align>
			<aligny>center</aligny>
			<font>font28_title</font>
			<textcolor>white</textcolor>
			<shadowcolor>black</shadowcolor>
			<label>$INFO[System.Time]</label>
            <animation effect="slide" start="0,0" end="-40,0" time="100" condition="Window.IsVisible(Mutebug)">conditional</animation>			
		</control>
		
		<control type="image">
			<posx>50</posx>
			<posy>60</posy>
			<width>750</width>
			<height>600</height>
			<texture border="15">lb_ContentPanel.png</texture>
		</control>
		<control type="image">
			<posx>50</posx>
			<posy>652</posy>
			<width>750</width>
			<height>64</height>
			<texture border="15">lb_ContentPanelMirror.png</texture>
		</control>
					
		<control type="list" id="59">
				<posx>70</posx>
				<posy>78</posy>
				<width>690</width>
				<height>561</height>
				<onleft>2</onleft>
				<onright>159</onright>
				<onup>59</onup>
				<ondown>59</ondown>
				<pagecontrol>159</pagecontrol>
				<scrolltime>200</scrolltime>
				<itemlayout height="40" width="580">
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>690</width>
						<height>41</height>
						<texture border="0,2,0,2">lb_MenuItemNF.png</texture>
					</control>
					<control type="label">
						<posx>10</posx>
						<posy>0</posy>
						<width>660</width>
						<height>40</height>
						<font>font13</font>
						<textcolor>grey2</textcolor>
						<selectedcolor>selected</selectedcolor>
						<align>left</align>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Label]</label>
					</control>
				</itemlayout>
				<focusedlayout height="40" width="580">
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>690</width>
						<height>41</height>
						<texture border="0,2,0,2">lb_MenuItemNF.png</texture>
						<visible>!Control.HasFocus(59)</visible>
					</control>
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>690</width>
						<height>41</height>
						<texture border="0,2,0,2">lb_MenuItemFO.png</texture>
						<visible>Control.HasFocus(59)</visible>
					</control>
					<control type="label">
						<posx>10</posx>
						<posy>0</posy>
						<width>660</width>
						<height>40</height>
						<font>font13</font>
						<textcolor>white</textcolor>
						<selectedcolor>selected</selectedcolor>
						<align>left</align>
						<aligny>center</aligny>
						<label>$INFO[ListItem.Label]</label>
					</control>
				</focusedlayout>
			</control>
			<control type="scrollbar" id="159">
				<posx>760</posx>
				<posy>85</posy>
				<width>25</width>
				<height>550</height>
				<texturesliderbackground border="0,14,0,14">lb_ScrollBarV.png</texturesliderbackground>
				<texturesliderbar border="0,14,0,14">lb_ScrollBarV_bar.png</texturesliderbar>
				<texturesliderbarfocus border="0,14,0,14">lb_ScrollBarV_bar_focus.png</texturesliderbarfocus>
				<textureslidernib>lb_ScrollBarNib.png</textureslidernib>
				<textureslidernibfocus>lb_ScrollBarNib.png</textureslidernibfocus>
				<onleft>59</onleft>
				<onright>3010</onright>
				<showonepage>false</showonepage>
				<orientation>vertical</orientation>
				<visible>Control.IsVisible(59)</visible>
			</control>
			
			<control type="group">
				<posx>850</posx>
				<posy>100</posy>
				<control type="image">
					<posx>0</posx>
					<posy>0</posy>
					<width>360</width>
					<height>540</height>
					<aspectratio aligny="bottom">keep</aspectratio>
					<fadetime>400</fadetime>
					<texture background="true">$INFO[ListItem.Icon]</texture>
					<bordertexture border="8">lb_ThumbShadow.png</bordertexture>
					<bordersize>8</bordersize>
				</control>
				<control type="image">
					<posx>8</posx>
					<posy>532</posy>
					<width>344</width>
					<height>524</height>
					<aspectratio aligny="top">keep</aspectratio>
					<fadetime>400</fadetime>
					<texture diffuse="lb_diffuse_mirror3.png" flipy="true" background="true">$INFO[ListItem.Icon]</texture>
				</control>
			</control>
			
			<control type="group">
					<description>TV Group</description>
					<posx>800</posx>
					<posy>60</posy>    
					<control type="image">
						<posx>0</posx>
						<posy>0</posy>
						<width>450</width>
						<height>260</height>
						<texture border="20">lb_ContentPanel.png</texture>
                        <visible>Player.HasVideo</visible>
					</control>
					<control type="button" id="3010">
						<description>Video overlay button</description>
						<posx>0</posx>
						<posy>1</posy>
						<width>448</width>
						<height>260</height>
						<texturenofocus>blank</texturenofocus>
						<texturefocus border="12,14,10,14">lb_folder-focus.png</texturefocus>	
						<onleft>159</onleft>
						<visible>Player.HasVideo</visible>
					</control>
					<control type="videowindow">
						<posx>14</posx>
						<posy>11</posy>
						<width>422</width>
						<height>240</height>
					</control>
				</control>
    </controls>
</window>
